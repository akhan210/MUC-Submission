<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a9bcb">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Roads By Name"
        android:id="@+id/txtHeading"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Road Name"
        android:id="@+id/txtname"
        android:layout_marginTop="19sp"
        android:layout_marginBottom="9sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ettitle"
        android:layout_gravity="center_horizontal" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Roads"
            android:id="@+id/btnsearch"
                       android:layout_marginRight="29sp"
            android:layout_gravity="center_horizontal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Preferences"
        android:id="@+id/btnsave" />
</TableRow>
    </TableLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_marginTop="29sp"
        android:layout_height="264dp"
        android:id="@+id/gdsearchroads"
        android:layout_gravity="center_horizontal" />
</LinearLayout>